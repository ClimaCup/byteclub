
<body>
    <div class="container">
        <h3>Edit Club Meeting</h3>
        <%=form_for @meeting, url: admin_meeting_path(@meeting) do |f|%>
            <%=f.hidden_field :_method, value:"PATCH"%>
            <div class="form-row">
                <%=f.date_field :date, placeholder: "date"%>
                <%=f.time_field :start_time, placeholder: "3:30 PM"%>
            </div>
            <div class="form-row">
                <%=f.text_area(:content, placeholder: "meeting agenda", size: "24x6")%>
            </div>
            <%=f.submit "update meeting", class: 'btn btn-green'%>
            <a href="<%=root_path%>" class="btn btn-danger">Cancel</a>
        <%end%>
    </div>
</body>